<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jack.roadtorecovery.Goals"
    android:background="@android:color/black">
    tools:context="amanda.roadtorecovery.Goals">
    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="GUD GOALS"
        android:id="@+id/textView3"
        android:textSize="65dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Win the Day"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="85dp"
        android:textSize="60dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textStyle="italic" />

    <Button
        android:layout_width="139dp"
        android:layout_height="73dp"
        android:text="Won the Day"
        android:id="@+id/button"
        android:layout_gravity="center_vertical|left"
        android:layout_weight="0.07"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="5dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="145dp"
        android:layout_height="66dp"
        android:text="Minor Setback"
        android:id="@+id/button2"
        android:layout_gravity="center_vertical|right"
        android:layout_weight="0.16"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/textView2"
        android:layout_gravity="center"
        android:layout_weight="0.41"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="65dp"
        android:textAlignment="center"
        android:layout_marginBottom="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Weekly Progress:"
        android:id="@+id/textView5"
        android:layout_gravity="left|bottom"
        android:textColor="@android:color/background_light"
        android:layout_marginBottom="175dp"
        android:textSize="35dp"
        android:layout_marginLeft="15dp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal|bottom|right"
        android:background="@mipmap/squares"
        android:layout_marginBottom="115dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="&quot;Minor setbacks for a major comeback&quot;"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="@android:color/background_light"
        android:textSize="35dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textStyle="italic"
        android:layout_marginBottom="20dp" />
    android:layout_height="match_parent"
    android:text="@string/hello_blank_fragment" />

</FrameLayout>